<article class="post">

    {{#if hero}}
        <img src="{{hero}}" /> 
    {{/if}}


    <a href="{{url}}"><h1>{{title}}</h1></a>
    
    {{#if date}}
        <div class="post-date">   
            {{shortDate date}} ({{ago date}})
        </div>
    {{/if}}

    {{#if tags.length}}
        <div class="post-tags">
            Tags : {{{renderTags tags}}}
        </div>
    {{/if}}

    {{{markup}}}
</article>