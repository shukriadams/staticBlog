{{#extend "layout"}}

    {{#content "body"}}

        <div class="index">
            {{#each posts}}
                <div class="index-item">
                    <a class="index-itemLink" href="{{url}}">
                        <h2>{{title}}</h2>
                        {{ago date}}
                    </a>
                </div>
            {{/each}}
        </div>

        <div class="pager">
            <div class="pager-previous">
                {{#isDefined prev}}
                    <a href="/index{{#neq prev 0}}-{{prev}}{{/neq}}.html">Older</a>
                {{/isDefined}}
            </div>
            <div class="pager-next">
                {{#isDefined next}}
                    <a href="/index{{#neq next 0}}-{{next}}{{/neq}}.html">Newer</a>
                {{/isDefined}}
            </div>
        </div>
        
    {{/content}}

    {{#content "footer"}}
        {{>footer}}
    {{/content}}    

{{/extend}}


