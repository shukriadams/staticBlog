{{#extend "layout"}}
    {{#content "body"}}

        <h1>{{title}}</h1>

        {{#each posts}}
            <div>
                <a href="{{url}}">{{title}}</a> ({{shortDate date}})
            </div>
        {{/each}}

        {{#isDefined prev}}
                <a href="/tags/{{urlFriendlyTag}}{{#neq prev 0}}-{{prev}}{{/neq}}.html">Previous</a>
        {{/isDefined}}

        {{#if next}}
            <a href="/tags/{{urlFriendlyTag}}-{{next}}.html">Next</a>
        {{/if}}

    {{/content}}

    {{#content "footer"}}
        {{>footer}}
    {{/content}}       

{{/extend}}


